{
  "id": null,
  "uid": "email-campaign",
  "title": "Email Campaign Monitoring",
  "tags": ["email", "campaign", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Emails Sent",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "email_sent_total"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false }
      },
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Emails Failed",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "email_failed_total"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false }
      },
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Active Workers",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "email_worker_active_count"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false }
      },
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "graph",
      "title": "Emails Sent Over Time",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(email_sent_total[1m])",
          "legendFormat": "sent/min"
        }
      ],
      "lines": true,
      "gridPos": { "x": 0, "y": 3, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Emails Failed Over Time",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(email_failed_total[1m])",
          "legendFormat": "failed/min"
        }
      ],
      "lines": true,
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Email Send Duration (95th Percentile)",
      "id": 6,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(email_send_duration_seconds_bucket[2m])) by (le))"
        }
      ],
      "lines": true,
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 6 }
    }
  ]
}
